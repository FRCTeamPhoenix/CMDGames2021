{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build CMD Games",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"Main.cpp",
				"ExampleGame.cpp",
				"Minesweeper.cpp",
				"GameManager.cpp",
				"Hangman.cpp",
				"HigherOrLower.cpp",
				"Scrabble.cpp",
				"GemGame.cpp",
				"Life.cpp",
				"RockPaperScissor.cpp",
				"SnakeGame.cpp",
				"-o",
				"${workspaceFolder}\\CMDGames.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		}
	]
}